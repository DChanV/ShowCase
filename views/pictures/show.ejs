<% include ../partials/header %>

<div class="container">
    <div class="row">
        <!--<div class="col-md-3">-->
            <!--<p class="lead">Yelp Camp</p>-->
            <!--<div class="list-group">-->
            <!--    <li class="list-group-item">Info 1</li>-->
            <!--    <li class="list-group-item">Info 2</li>-->
            <!--    <li class="list-group-item">Info 3</li>-->
            <!--</div>-->
        <!--</div>-->
        <div class="col-md-12">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=campground.image%>"></img>
                
                <h4><strong><%=campground.name%></strong></h4>
                
                <div class="caption">
                    <em><p>Submitted by: <%=campground.author.username%></p></em>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-md btn-warning userButtons" href="/pictures/<%=campground.id%>/edit">Edit</a>
                        <form action="/pictures/<%=campground.id%>?_method=DELETE" method="post" class="showButtons">
                            <button class="btn btn-md btn-danger userButtons">Delete</button>
                        </form>
                    <% } %>
                    <p><%=campground.description%></p>
                </div>
            </div>
            <div class="well">
                <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-default btn-md pull-right">Add new comment</a>
                <hr>
                <% campground.comments.forEach(function(comment){ %>
                    <span><strong><%= comment.author.username %></strong></span>
                    <p><%= comment.body %></p>
                    <% if(currentUser && campground.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-md btn-warning" href="/campgrounds/<%=campground.id%>/comments/<%=comment.id%>/edit">Edit</a>
                        <form method="post" action="/campgrounds/<%=campground.id%>/comments/<%=comment.id%>?_method=DELETE">
                            <button class="btn btn-md btn-danger">Delete</button>
                    <% } %>
                    </form>
                <% }) %>
            </div>
        </div>
    </div>    
</div>

<% include ../partials/footer %>